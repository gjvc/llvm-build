#! /bin/bash

# -----------------------------------------------------------------------------

set -eu -o pipefail
readonly _BASENAME=$( basename ${BASH_SOURCE[0]} )
readonly _DIRNAME=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && realpath . )
readonly _ROOT=$( dirname ${_DIRNAME} )


# clean -----------------------------------------------------------------------

rm -rf ${_ROOT}/obj
rm -rf ${_ROOT}/log


# tools -----------------------------------------------------------------------

source ${_ROOT}/etc/tools 


# update worktrees ------------------------------------------------------------

#${_DIRNAME}/git-write-worktrees


# bootstrap -------------------------------------------------------------------

${_DIRNAME}/stage1
${_DIRNAME}/stage2
${_DIRNAME}/stage3
${_DIRNAME}/stage4

