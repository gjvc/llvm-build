#! /bin/bash

# -----------------------------------------------------------------------------

set -eu -o pipefail
readonly _DIRNAME=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && realpath . )
readonly _BASENAME=$( basename ${BASH_SOURCE[0]} )
readonly _ROOT=$( dirname ${_DIRNAME} )

symbol=${1}

# -----------------------------------------------------------------------------

shopt -s globstar
set +e
for _a in ${_ROOT}/obj/**/*.a; do

    nm ${_a} | grep "T .*${symbol}"

    if [[ ${?} -eq 0 ]]; then
        echo ${_a}
        find ${_ROOT}/obj -name $(basename ${_a} )
        echo
    fi

done

