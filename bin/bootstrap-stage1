#! /bin/bash

# -----------------------------------------------------------------------------

set -eu -o pipefail
readonly _BASENAME=$( basename ${BASH_SOURCE[0]} )
readonly _DIRNAME=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && realpath . )
readonly _ROOT=$( dirname ${_DIRNAME} )


# defaults --------------------------------------------------------------------

source ${_ROOT}/etc/defaults 


# stage1 settings -------------------------------------------------------------

stage=stage1
src_path=${_ROOT}/src/${github_path}/${llvm_version}
obj_path=${_ROOT}/obj/${github_path}/${llvm_version}/${sequence_name}/${stage}

stage1_cmake_file=${_ROOT}/etc/cmake/${sequence_name}-${stage}.cmake
stage1_build_dir=${obj_path}/build
stage1_target_dir=${obj_path}/target


# generate --------------------------------------------------------------------

[[ -d ${stage1_build_dir} ]] && rm -rf ${stage1_build_dir}
[[ -d ${stage1_target_dir} ]] && rm -rf ${stage1_target_dir}

export LD_LIBRARY_PATH=${gcc_root}/lib64
${cmake3_binary} \
    --debug-trycompile \
    -D CCACHE_BINARY=${ccache_binary} \
    -D GCC_DUMPMACHINE=${gcc_dumpmachine} \
    -D GCC_ROOT=${gcc_root} \
    -D GCC_VERSION=${gcc_version} \
    -D SRC_PATH=${src_path} \
    -D STAGE1_BUILD_DIR=${stage1_build_dir} \
    -D STAGE1_TARGET_DIR=${stage1_target_dir} \
    -G Ninja \
    -S ${src_path}/llvm \
    -B ${stage1_build_dir} \
    -C ${stage1_cmake_file} \
    -Wno-dev \
    |& stdbuf -i0 -o0 -e0 nl -s '  ' -w4 -nrz -ba \
    |& ts "stage1.cmake.generate " \
    |& ts "%Y-%m-%d.%H%M.%.S "


# reset state -----------------------------------------------------------------

ccache --zero-stats 1>/dev/null 2>&1


# build -----------------------------------------------------------------------

${ninja_build_binary} \
    -C ${stage1_build_dir} \
    |& stdbuf -i0 -o0 -e0 nl -s '  ' -w4 -nrz -ba \
    |& ts "stage1.ninja.build " \
    |& ts "%Y-%m-%d.%H%M.%.S "

${ninja_build_binary} \
    -C ${stage1_build_dir} \
    install \
    |& stdbuf -i0 -o0 -e0 nl -s '  ' -w4 -nrz -ba \
    |& ts "stage1.ninja.install " \
    |& ts "%Y-%m-%d.%H%M.%.S "

